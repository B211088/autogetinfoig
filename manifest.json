{
  "manifest_version": 3,
  "name": "Instagram Info Extractor",
  "version": "1.0",
  "description": "Lấy thông tin profile Instagram và cookie",
  "permissions": [
    "activeTab",
    "cookies",
    "clipboardWrite",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.instagram.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}